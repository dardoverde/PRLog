
@{
    ViewBag.Title = "Registry";
}

<h2>PR Log</h2>
<h6>Best gym admin</h6>


<div class="row">


    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">

                    <div class="btn-group col-sm-12" role="group" aria-label="Basic example">
                        <a href="~/Login/Login" class="btn btn-secondary col-sm-6">Login</a>
                        
                        <button type="button" onclick="" class="btn btn-secondary active col-sm-6 " id="register-form-link">
                            Registry
                        </button>
                    </div>


                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <form id="register-form" action="@Url.Content("~/Login/Registry")" method="post" role="form">
                                <div class="form-group">
                                    <input type="text" name="txtNombre" id="username" tabindex="1" class="form-control" placeholder="Nombre" value="">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="txtApellido" id="username" tabindex="1" class="form-control" placeholder="Apellido" value="">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="txtCelular" id="username" tabindex="1" class="form-control" placeholder="Celular" value="">
                                </div>
                                <div class="form-group">
                                    <label for="dteFechaNacimiento">FechaNacimiento</label>
                                    <input type="date" name="dteFechaNacimiento" id="username" tabindex="1" class="form-control" placeholder="" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="txtEmail" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="txtContrasena" id="password" tabindex="2" class="form-control" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="txtContrasenaConfirma" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn  btn-primary" value="Register Now">
                                            @if (ViewBag.ErrorRegistry != "")
                                            {
                                                <div class=" row">
                                                    <div class=" col-sm-12">
                                                        <label class="" for="">@ViewBag.Error</label>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

