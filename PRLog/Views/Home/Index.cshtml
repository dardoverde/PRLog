@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>
        @Recursos.Recurso.Hola @Session["NombreUsuario"]
    </h1>
    <p class="lead">Hoy es un gran dia.</p>
    
</div>

<div class="row">
    

    <div class="container " id="featured-3">
        <h2 class="pb-2 border-bottom">
            @Recursos.Recurso.Entrenamientos
            </h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            @foreach (var Mensualidad in ViewBag.misMensualidades)
            {
            <div class="feature col">
                <div class="feature-icon d-inline-flex text-bg-primary bg-gradient fs-2 mb-3">
                    <svg class="bi" width="1em" height="1em"><use xlink:href="#collection"></use></svg>
                </div>
                <h3 class="fs-2">@Mensualidad.Disciplinas.Nombre - @Mensualidad.Disciplinas.Gimnasios.Nombre</h3>

                <p>Válido desde: @Mensualidad.FechaDesde Hasta: @Mensualidad.FechaHasta</p>
                <button type="button" class="btn btn-primary btn-sm">Hoy entreno</button>
                <button type="button" class="btn btn-secondary btn-sm">Mañana entreno también</button>
            </div>
            }
            
            
        </div>
    </div>
</div>